pipeline {
   agent any
     stages {
         stage('verify') {
            steps { 
                    sh " docker --version"
                    sh " docker-compose --version"
              }
         }
         stage('npm') {
            steps{
                  sh " npm install"
              }
          }
          stage('docker'){
             steps{
                    sh " docker install"
                    sh " systemctl start docker"
               }
          }
         stage('build') {
          steps {
                    sh " docker-compose build"
              }
          }
          stage('run'){
             steps { 
                  sh " docker-compose up"
               }
           }
        }
     }   
